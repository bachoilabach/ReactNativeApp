{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": "./", // Đặt thư mục gốc
    "paths": {
      "@/*": ["*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["src/model/*"], // Alias cho thư mục model
      "@utils/*": ["utils/*"],
      "@components/*": ["src/components/*"], // Alias cho thư mục components
      "@services/*": ["src/services/*"], // Alias cho thư mục services
      "@props/*": ["src/props/*"], // Alias cho thư mục props
      "@screens/*": ["src/navigation/screens/*"] // Alias cho thư mục screens
    }
  }
}
