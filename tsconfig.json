{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": "./", // Đặt thư mục gốc
    "paths": {
      "@/*": ["*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["src/model/*"], 
      "@utils/*": ["utils/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"], 
      "@props/*": ["src/props/*"], 
      "@screens/*": ["src/navigation/screens/*"] 
    }
  }
}
